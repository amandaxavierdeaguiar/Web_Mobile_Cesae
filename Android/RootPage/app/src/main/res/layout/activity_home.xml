        app:layout_constraintTop_toBottomOf="@+id/button_atividade1" />

    <Button
        android:id="@+id/button_atividade3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="225dp"
        android:text="Atividade3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_atividade2"
        app:layout_constraintStart_toStartOf="@+id/button_atividade2"
        app:layout_constraintTop_toBottomOf="@+id/button_atividade2" />

</androidx.constraintlayout.widget.ConstraintLayout>