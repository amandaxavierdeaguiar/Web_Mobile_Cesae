<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercicio4Produtos">

    <CheckBox
        android:id="@+id/checkBox_produto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hamburguer"
        app:layout_constraintStart_toStartOf="@+id/checkBox_produto1"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_produto1" />

    <CheckBox
        android:id="@+id/checkBox_produto5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastel"
        app:layout_constraintStart_toStartOf="@+id/checkBox_produto4"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_produto4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Faça seu pedido:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_produto6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Água"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_produto7"
        app:layout_constraintStart_toStartOf="@+id/checkBox_produto7" />

    <CheckBox
        android:id="@+id/checkBox_produto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="38dp"
        android:text="Francesinha"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <CheckBox
        android:id="@+id/checkBox_produto9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="30dp"
        android:text="Cerveja"
        app:layout_constraintBottom_toTopOf="@+id/button_pedido"
        app:layout_constraintStart_toStartOf="@+id/button_pedido" />

    <CheckBox
        android:id="@+id/checkBox_produto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salmão"
        app:layout_constraintStart_toStartOf="@+id/checkBox_produto2"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_produto2" />

    <CheckBox
        android:id="@+id/checkBox_produto8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ice-Tea"
        app:layout_constraintStart_toStartOf="@+id/checkBox_produto9"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_produto7" />

    <CheckBox
        android:id="@+id/checkBox_produto7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Coca-Cola"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_produto9"
        app:layout_constraintStart_toStartOf="@+id/checkBox_produto8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="21dp"
        android:text="Comidas:"
        app:layout_constraintStart_toStartOf="@+id/checkBox_produto1"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="7dp"
        android:text="Bebidas:"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_produto6"
        app:layout_constraintStart_toStartOf="@+id/checkBox_produto6" />

    <CheckBox
        android:id="@+id/checkBox_produto4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coxinha"
        app:layout_constraintStart_toStartOf="@+id/checkBox_produto3"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_produto3" />

    <Button
        android:id="@+id/button_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:text="Faça seu pedido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>