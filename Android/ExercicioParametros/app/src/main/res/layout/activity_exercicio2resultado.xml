<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercicio2resultado">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main2resultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#020D4B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Exercicio2resultado">

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="441dp"
            android:layout_marginStart="57dp"
            android:layout_marginEnd="57dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_soma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="159dp"
            app:layout_constraintEnd_toStartOf="@+id/text_diferenca"
            app:layout_constraintStart_toStartOf="@+id/text_diferenca"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/text_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="117dp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/text_diferenca" />

        <TextView
            android:id="@+id/text_divisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="@+id/text_produto"
            app:layout_constraintTop_toBottomOf="@+id/text_produto" />

        <TextView
            android:id="@+id/text_diferenca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            app:layout_constraintEnd_toStartOf="@+id/text_produto"
            app:layout_constraintStart_toStartOf="@+id/text_produto"
            app:layout_constraintTop_toBottomOf="@+id/text_soma" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>