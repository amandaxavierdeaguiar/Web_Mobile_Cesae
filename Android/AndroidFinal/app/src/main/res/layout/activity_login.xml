<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Login">


    <ImageView
        android:id="@+id/mariaSalgadaLogotipo"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginTop="60sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logomariasalgada" />

    <LinearLayout
        android:id="@+id/linear_global"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_below="@+id/mariaSalgadaLogotipo"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_global"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E7A10B"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_email"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70sp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Insira seu email"
                    android:textAlignment="center"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_password"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130sp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_horizontal"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:hint="Insira sua Password"

                    />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/button_login"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:text="Entrar"
                android:layout_below="@+id/cardView_password"
                android:layout_marginTop="190sp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#B57C00"
                android:textStyle="bold"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/text_criar_conta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ainda nÃ£o tem conta? Clique aqui para registar"
                android:textSize="16sp"
                android:layout_marginTop="250sp"
                android:layout_marginBottom="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
